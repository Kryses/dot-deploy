#!/usr/bin/bash
set -e

DOTFILES_DIR="$HOME/.dotfiles"
SSH_DIR="$HOME/.ssh"
echo $DOTFILES_DIR

distro=$(cat /etc/os-release | grep ^ID | sed s/^ID=//g)
echo $distro

if ! [ -x "$(command -v ansible)" ]; then
  if [ $distro = 'ubuntu' ]; then
	sudo apt install -y  ansible
  elif [ $distro = 'arch' ]; then
    sudo pacman -S ansible-core ansible git
  fi
fi

if [ $distro = 'arch' ]; then
  LIBDIR="$DOTFILES_DIR/ansible/library"
  echo $LIBDIR
  if [ -f $LIBDIR ]; then
    mkdir "$LIBDIR"
  fi
  if [ -f $LIBDIR/ansible-yay ]; then
    git clone "https://github.com/mnussbaum/ansible-yay.git" $LIBDIR/ansible-yay
  fi
  if [ -f $LIBDIR/makepkg ]; then
    git clone "https://github.com/gunzy83/ansible-makepkg.git" $LIBDIR/ansible-makepkg
  fi
fi

if [[ -f "$DOTFILE_DIR/ansible/roles/requirements.yml" ]]; then
	cd "$DOTFILES_DIR/ansible/roles"
	ansible-galaxy install -r requirements.yml
fi

cd "$DOTFILES_DIR"
ansible-playbook --ask-vault-pass --diff "$DOTFILES_DIR/ansible/main.yml" --ask-become-pass
